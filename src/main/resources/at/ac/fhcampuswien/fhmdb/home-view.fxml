<VBox prefHeight="331.0" prefWidth="570.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.controllers.MovieController">
   <HBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="347.0" spacing="20.0" style="-fx-background-color: black;">
      <padding>
         <Insets bottom="7.0" left="10.0" top="7.0" />
      </padding>
      <children>
         <Label style="-fx-background-color: #E69971;" text="FHMDb" textFill="BLACK">
            <font>
               <Font name="Calibri Bold" size="24.0" />
            </font>
            <padding>
               <Insets left="2.0" right="2.0" />
            </padding>
         </Label>
      </children>
   </HBox>
   <HBox spacing="5.0" stylesheets="@styles.css">
      <children>
         <JFXButton fx:id="sortBtn" style="-fx-background-color: #E69971;" stylesheets="@styles.css" text="Sort (asc)" />
         <TextField fx:id="searchField" prefHeight="25.0" prefWidth="170.0" promptText="Search FHMDb" />
         <JFXComboBox fx:id="genreComboBox" focusColor="#E69971" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="releaseYearComboBox" focusColor="#E69971" layoutX="266.0" layoutY="30.0" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXComboBox fx:id="ratingComboBox" focusColor="#E69971" layoutX="327.0" layoutY="30.0" styleClass="filter-combo-box" stylesheets="@styles.css" />
         <JFXButton fx:id="searchBtn" style="-fx-background-color: #E69971;" styleClass="background-yellow" stylesheets="@styles.css" text="Search" />
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
      <padding>
         <Insets bottom="20.0" left="10.0" top="20.0" />
      </padding>
   </HBox>
   <JFXListView fx:id="movieListView" stylesheets="@styles.css" VBox.vgrow="ALWAYS" />
</VBox>
